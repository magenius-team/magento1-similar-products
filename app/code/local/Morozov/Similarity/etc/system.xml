<?xml version="1.0"?>
<config>
    <tabs>
        <morozov_similarity translate="label" module="morozov_similarity">
            <label><![CDATA[Similarity]]></label>
            <sort_order>10</sort_order>
        </morozov_similarity>
    </tabs>
    <sections>
        <morozov_similarity translate="label" module="morozov_similarity">
            <label>Similarity</label>
            <tab>morozov_similarity</tab>
            <frontend_type>text</frontend_type>
            <sort_order>450</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Comment.]]></comment>
                        </enabled>
                        <email translate="label comment">
                            <label>Contact Email</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Comment.]]></comment>
                        </email>
                        <url translate="label comment">
                            <label>Service URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Service URL. Example:<br/> https://bragard-similarity.apps.msk.morozov.cloud/]]></comment>
                        </url>
                        <key translate="label comment">
                            <label>Security Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[]]></comment>
                        </key>
                        <timeout translate="label comment">
                            <label>Allowed Service Timeout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[In milliseconds.]]></comment>
                        </timeout>
                        <connect translate="label">
                            <label></label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>morozov_similarity/Adminhtml_ConnectButton</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Connects your store with the service. As a response sends Service URL and Security Key.]]></comment>
                        </connect>
                    </fields>
                </general>
                <upsell_options translate="label">
                    <label>Up-sell Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <upsell_max_count translate="label comment">
                            <label>Default Maximum Products to Display</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Comment.]]></comment>
                        </upsell_max_count>
                    </fields>
                </upsell_options>
            </groups>
        </morozov_similarity>
    </sections>
</config>